---
import "../styles/global.css";
import Sidebar from "../components/Sidebar.astro";
import TopNav from "../components/TopNav.astro";
const { title = "Lynn Han" } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body class="bg-white text-black">
    <div class="min-h-screen">
      <Sidebar />
      <TopNav />
      <div id="site-overlay" class="site-overlay" aria-hidden="true"></div>
      <main class="relative min-h-screen bg-white px-6 pb-16 pt-24 md:px-12">
        <slot />
      </main>
    </div>
  </body>
</html>
